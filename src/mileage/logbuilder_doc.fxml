<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox  xmlns:fx="http://javafx.com/fxml/1"  fx:id="vbox2">
    
    <GridPane alignment="CENTER" hgap="10.0" vgap="10.0">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
        <Label fx:id="fileNameLabel" text="Filename for new log:"                
               GridPane.columnIndex="0" GridPane.rowIndex="0">
        </Label>
        <TextField fx:id="fileNameField" prefWidth="10"  
                   GridPane.columnIndex="0" GridPane.rowIndex="1"/>  
        <Label fx:id="fileExtLabel" text=".txt"                
               GridPane.columnIndex="1" GridPane.rowIndex="1">
        </Label>
        <Label fx:id="yearToBuildLabel" text="Calendar year to build: "                
               GridPane.columnIndex="0" GridPane.rowIndex="2">
        </Label>
        <TextField fx:id="yearToBuildField" prefWidth="10" 
                   GridPane.columnIndex="0" GridPane.rowIndex="3"/> 
        <Button fx:id="closeButton" text="Close" onAction="#closeLogBuilder" 
                GridPane.columnIndex="0" GridPane.rowIndex="5"/>
        <Button fx:id="buildButton" text="Build Log" onAction="#buildNewLog" 
                GridPane.columnIndex="1" GridPane.rowIndex="5"/>
        
        <Label fx:id="buildCompleteLabel"                
               GridPane.columnIndex="1" GridPane.rowIndex="6">
        </Label>
    </GridPane>    
    
</VBox>
